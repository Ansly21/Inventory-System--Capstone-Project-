<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products (Admin)</title>
    <link rel="stylesheet" href="/Products (Admin).css">
</head>
<body>

    <header>
        <div class="image">
            <a href="/">
                <img src="/Six7TwoLogo.png" alt="">
            </a>
        </div>

            <h1 id="title">PRODUCTS</h1>
 
    </header>

    <main>

        <div class="nav">
            <a href="/products">
                <button>Products</button>
            </a>

            <a href="/inventory">
                <button>Inventory</button>
            </a>

            <a href="/reports">
                <button>Reports</button>
            </a>

            <a href="account">
                <button class="page-btn">Accounts</button>
            </a>
        </div>

        <div class="table-container">
            <div class="search-date">
                <input type="search" placeholder="enter product name or id">
                <p id="date">
                    <!-- Date is dynamically rendered from JS -->
                </p> 
            </div>

            <table>
                <tr>
                    <th>CODE</th>
                    <th>PRODUCT NAME</th>
                    <th>UNIT COST</th>
                    <th>UNIT PRICE</th>
                    <th>LOW STOCK THRESHOLD</th>
                    <th>STARTING INVENTORY</th>
                    <th>STATUS</th>
                </tr>

                <!--
                <tr>
                    <td><input type="text" name ="code" value="1"></td>
                    <td><input type="text" name = "productName" value="HBW Ballpen"></td>
                    <td><input type="number" name = "unitCost" value="4"></td>
                    <td><input type="number" name = "unitPrice"value="7"></td>
                    <td><input type="number" name = "lowStockThreshold"value="20"></td>
                    <td><input type="number" name = "startingInventory"value="35"></td>
                    <td><input type="range" name = "status" min="0" max="1"></td>
                </tr>
                 -->
                 <% if(products.length > 0) { %>
                    <% products.forEach((product,index) => { %>
                <tr>

            

                    <td><input type="text" name ="code[]" value="<%= product._id %>"></td>
                    <td><input type="text" name = "productName[]" value="<%= product.productName %>"></td>
                    <td><input type="number" name = "unitCost[]" value="<%= product.unitCost %>"></td>
                    <td><input type="number" name = "unitPrice[]"value="<%= product.unitPrice %>"></td> 
                    <td><input type="number" name = "lowStockThreshold[]"value="<%= product.lowStockThreshold %>"></td>
                    <td><input type="number" name = "startingInventory[]"value="<%= product.startingInventory %>"></td>
                    <td><input type="range" name = "status[]" min="0" max="1" value="<%= product.status %>"></td>

                   
                    
                </tr>
                
                <% }) %>

                <%} else { %>
                    <p>There are no products yet...</p>
                
                <% } %>   
                
            </table>
